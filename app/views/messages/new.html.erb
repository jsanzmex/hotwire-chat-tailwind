<div class="mx-auto md:w-2/3 w-full">
    <h1 class="font-bold text-4xl">New Message</h1>

    <%= turbo_frame_tag "new_message" do %>
        <%= form_with(
            model: [ @message.room, @message],
            class: "contents",
            data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |form| %>
            <div class="field my-5">
                <%= form.label :message %>
                <%= form.text_field :content, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
            </div>
            <div class="inline">
                <%= form.submit "Send", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block fony-medium cursor-pointer" %>
            </div>
        <% end %>
    <% end %>

    <%= link_to 'Back', @message.room, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>

